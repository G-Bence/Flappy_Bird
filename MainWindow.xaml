<Window x:Class="Flappy_Bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flappy_Bird"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown" MouseDown="Window_MouseDown" Loaded="Window_Loaded">
    <Grid>
        <Canvas Name="GameCanvas">
            <Canvas.Background>
                <ImageBrush ImageSource="/background.png"/>
            </Canvas.Background>

            <Image Name="Bird" Width="80" Height="60" Source="/bird.png" Canvas.Left="30" Canvas.Top="200"/>


        </Canvas>

        <!--

		<Image Name="Bird" Width="120" Height="80" Source="/bird.png" HorizontalAlignment="Left" VerticalAlignment="Center">
			<Image.RenderTransform>
				<TranslateTransform x:Name="Birdtransform"/>
			</Image.RenderTransform>
		</Image>
		-->

        <TextBlock Name="ScoreText"
                   Margin="12"
                   FontSize="22"
                   Foreground="Black"
                   Text="Score: 0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>

        <Grid Name="RainOverlay"
            Visibility="Collapsed"
            IsHitTestVisible="False">
            <Border Name="RainDim"
            Background="Black"
            Opacity="0"/>

            <Image Name="RainImage"
                Stretch="Fill"
                Opacity="0"/>

            <Image Name="FogImage"
                Stretch="Fill"
                Opacity="0"/>
 
        </Grid>

        <Grid Name="GameOverOverlay"
          Visibility="Collapsed"
          Background="#AA000000">
            <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <TextBlock Text="GAME OVER"
                       Foreground="Red"
                       FontSize="72"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>

                <TextBlock Name="FinalScoreText"
                       Text="Score: 0"
                       Foreground="White"
                       FontSize="26"
                       HorizontalAlignment="Center" Margin="0,0,0,35"/>

                <!-- Restart button -->
                <Button Content="Restart"
                    Width="170"
                    Height="48"
                    FontSize="18"
                    Click="RestartButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
