  <ItemGroup>
    <None Remove="Assets\fog.avif" />
    <None Remove="Assets\fog_overlay.jpg" />
    <None Remove="Assets\fog_overlay.png" />
    <None Remove="Assets\Rain.gif" />
    <None Remove="background.png" />
    <None Remove="bird.gif" />
    <None Remove="Bird.jpg" />
    <None Remove="bird.png" />
    <None Remove="pipe-green.png" />
    <None Remove="Rain.gif" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\fog.avif" />
