  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Rain.gif" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WpfAnimatedGif" Version="2.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="background.png" />
